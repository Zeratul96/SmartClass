<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_center_bg1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person_center_bg2"
        android:layout_marginTop="350dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:gravity="center_horizontal"
                android:padding="@dimen/normal_space"
                android:textColor="@color/my_nick_name"
                android:textSize="@dimen/title_text_size" />
            <ImageView
                android:id="@+id/backView"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/back_button"
                />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/blue_layout"
                >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_space"
                android:orientation="horizontal"
                android:background="@color/layout_color"
                android:clickable="true"
                android:id="@+id/Person_account">
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/my_nick_name"
                    android:text="账号"
                    android:textSize="@dimen/button_text_size"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextView_zhanghao"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/button_text_size" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blank_arrow"
                    android:scaleY="0.8"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/layout_color"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:padding="@dimen/normal_space"
                android:id="@+id/person_head_sculpture">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/my_nick_name"
                    android:textSize="@dimen/button_text_size"
                    android:text="头像"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:id="@+id/userPhoto"
                    android:src="@drawable/login_sculpture"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_gray"
                    android:scaleY="0.8"
                    android:scaleX="0.8" />
            </LinearLayout>


            <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:background="@color/layout_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Person_nick_name_Linear"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:padding="@dimen/normal_space">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/my_nick_name"
                    android:text="昵称"
                    android:textSize="@dimen/button_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/button_text_size"
                    android:id="@+id/TextView_nicheng"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_gray"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="1px"
                android:background="@color/layout_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/Person_sexual"
                android:gravity="center_vertical"
                android:background="@drawable/layout_color"
                android:clickable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_nick_name"
                    android:text="性别"
                    android:textSize="@dimen/button_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/button_text_size"
                    android:id="@+id/TextView_gen"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_gray"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/layout_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/Person_tel"
                android:gravity="center_vertical"
                android:background="@drawable/layout_color"
                android:clickable="true">

                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/my_nick_name"
                    android:text="手机"
                    android:textSize="@dimen/button_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/button_text_size"
                    android:gravity="right"
                    android:id="@+id/TextView_tel"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_gray"
                    android:scaleY="0.8"
                    android:scaleX="0.8"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:background="@color/layout_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/ching_layout"
                >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>