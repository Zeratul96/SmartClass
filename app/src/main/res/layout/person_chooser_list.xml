<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_center"
        android:gravity="center_vertical"
        android:background="@drawable/layout_color"
        android:clickable="true"
        android:padding="@dimen/normal_space" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/person_center"
            android:text="个人中心"
            android:paddingLeft="10dp"
            android:textColor="@color/others_for_person"
            android:textSize="@dimen/button_text_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray"
            android:scaleY="0.8"
            android:scaleX="0.8"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notes"
        android:gravity="center_vertical"
        android:background="@drawable/layout_color"
        android:clickable="true"
        android:padding="@dimen/normal_space" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/others_for_person"
            android:drawableLeft="@drawable/notes"
            android:text="我的笔记"
            android:paddingLeft="10dp"
            android:textSize="@dimen/button_text_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray"
            android:scaleY="0.8"
            android:scaleX="0.8"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/layout_color"
        android:clickable="true"
        android:padding="@dimen/normal_space"
        android:id="@+id/teacher">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/others_for_person"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/teacher"
            android:text="我的老师"
            android:paddingLeft="10dp"
            android:textSize="@dimen/button_text_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray"
            android:scaleY="0.8"
            android:scaleX="0.8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/comment"
        android:background="@drawable/layout_color"
        android:clickable="true"
        android:padding="@dimen/normal_space" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/others_for_person"
            android:layout_weight="1"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/comment"
            android:text="我的评论"
            android:paddingLeft="10dp"
            android:textSize="@dimen/button_text_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray"
            android:scaleY="0.8"
            android:scaleX="0.8"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/background_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/settings"
        android:background="@drawable/layout_color"
        android:clickable="true"
        android:padding="@dimen/normal_space" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/others_for_person"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/settings"
            android:gravity="center_vertical"
            android:text="设置"
            android:paddingLeft="10dp"
            android:textSize="@dimen/button_text_size" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_gray"
            android:scaleY="0.8"
            android:scaleX="0.8"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
</LinearLayout>
