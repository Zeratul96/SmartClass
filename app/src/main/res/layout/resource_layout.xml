<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_gray">

            </View>

            <TextView
                android:text="练习题"
                android:textColor="@color/title"
                android:drawableLeft="@drawable/practice"
                android:drawablePadding="@dimen/login_title_space"
                android:gravity="center_vertical"
                android:padding="@dimen/normal_space"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/title"
                android:layout_weight="0.5" />

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/background_gray"
                android:layout_height="3dp">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="111dp"
                        android:src="@drawable/question_set"
                        android:id="@+id/question_set"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="111dp"
                        android:src="@drawable/wrong_set"
                        android:id="@+id/wrong_set" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/background_gray"
                android:id="@+id/class_view1" />

            <TextView
                android:text="在线课堂"
                android:textColor="@color/title"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/online"
                android:drawablePadding="@dimen/login_title_space"
                android:padding="10dp"
                android:layout_marginLeft="@dimen/normal_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title"
                android:id="@+id/class_title"
                />

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@color/background_gray"
                android:layout_height="3dp"
                android:id="@+id/class_view2" />

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/list_for_online"
                android:divider="@null"
                android:scrollbars="none"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_gray">

            </View>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
