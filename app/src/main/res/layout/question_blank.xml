<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            android:id="@+id/title_name" />

        <ImageView
            android:id="@+id/backView"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/cross" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_gray"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:text="出错啦：该题已被移除出题库"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_size_default"
        android:background="@color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/back_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一题"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/add_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_wrong_set"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添 加"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"
                    android:id="@+id/add_text" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/answer_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_answer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答 案"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/comment_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评 论"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/forward_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_forward"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一题"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
