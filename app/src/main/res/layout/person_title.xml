<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        >

        <ImageView
            android:layout_width="175dp"
            android:src="@drawable/person_bj"
            android:layout_gravity="right"
            android:layout_height="140dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_height="190dp">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="@dimen/login_title_space"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_space"
                android:text="我的昵称"
                android:textSize="@dimen/my_nick_name"
                android:textColor="@color/my_nick_name"
                />
            <TextView
                android:id="@+id/personName"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/login_title_space"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="50dp"
                android:textColor="@color/nicke_name"
                android:textSize="@dimen/text_for_person"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/sculpture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_sculpture" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>