<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/normal_space"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/backView"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/cross" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="@dimen/normal_space"
                android:id="@+id/question"
                android:textColor="@color/black"
                android:textSize="@dimen/info_text_size"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/no_picture"
                android:id="@+id/question_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/background_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:id="@+id/view1" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:padding="@dimen/normal_space"
                android:gravity="center_vertical"
                android:id="@+id/writer_layout">

                <TextView
                    android:text="你的回答"
                    android:textColor="@color/black"
                    android:textSize="@dimen/button_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.23"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="@color/text_gray"/>

                <EditText
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:maxLines="1"
                    android:id="@+id/answer"
                    android:layout_weight="0.77" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_gray"
                android:id="@+id/view2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/background_gray"
                android:id="@+id/btn_view" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_gray"
                android:gravity="center"
                android:weightSum="1"
                android:id="@+id/btn_layout">

                <Button
                    android:text="完  成"
                    android:textSize="@dimen/button_text_size"
                    android:textColor="@drawable/blue_text_color"
                    android:background="@drawable/commit_button"
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:id="@+id/done_btn"
                    android:layout_weight="0.9" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/background_gray"
                android:id="@+id/view3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/reference_layout">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:padding="@dimen/normal_space"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="参考答案"
                        android:textColor="@color/black"
                        android:textSize="@dimen/button_text_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/text_gray" />

                    <TextView
                        android:textColor="@color/green_button"
                        android:textSize="@dimen/info_text_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:maxLines="1"
                        android:id="@+id/standard_answer"
                        android:layout_weight="0.77" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gray"/>

            </LinearLayout>



         <include layout="@layout/question_analysis"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tools">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/back_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一题"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/add_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_wrong_set"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添 加"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"
                    android:id="@+id/add_text" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/answer_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_answer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答 案"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/comment_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评 论"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/normal_space"
                android:layout_weight="1"
                android:background="@drawable/layout_color"
                android:clickable="true"
                android:id="@+id/forward_btn">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_forward"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一题"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/drawable_padding"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
