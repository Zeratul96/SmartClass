<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/online_list_layout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_space"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_content">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="125dp"
            android:id="@+id/online_picture"
            android:background="@color/no_picture"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="点击查看详情>>"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/person_title_blue"
                android:gravity="center_vertical|end"/>

            <TextView
                android:layout_marginTop="15dp"
                android:padding="@dimen/normal_space"
                android:textSize="@dimen/title_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/title"
                android:maxLines="1"
                android:id="@+id/class_name" />

            <TextView
                android:textColor="@color/list_title"
                android:paddingTop="5dp"
                android:maxLines="2"
                android:paddingLeft="@dimen/normal_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/class_link" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_weight="0.9"
            >
        </View>

    </LinearLayout>

</LinearLayout>
